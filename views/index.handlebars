<div class="row">
  <center>
<div class="col-xs-12 text-center" id="top-bar">
			<h1>Eat Da Burger</h1>
		</div>
	<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
		<form action="/burger/create" method="POST">
			<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
			<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
		</form>
		<p>Enter in a burger you would like to eat!</p>
		</div>
	</div>
</div>
    <div class="col-md-6">
      <h1>Ready to eat!</h4>
      <div id="ready_to_eat">

        <!-- Dynamically Insert Ready Burgers Here -->
        {{#each burger_data}}
          {{#unless this.devoured}}
			<div id="gob">
            <li id="li" class="form-control">{{this.id}}. {{this.burger_name}}</li>
  				<form method="POST" action="/burger/update?_method=PUT" class="button-size">
					<input type="hidden" name="burger_id" type="text" value="{{this.id}}">
					<br>
					<button id="devour" type="submit" class="btn btn-default">Devour it!</button>
					</form>
			</div>



          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side (already eaten) -->
    <div class="col-md-6">
      <h1>Gobbled</h4>
      <div id="already_eaten">

        <!-- Dynamically Insert Eaten Burgers Here -->
        {{#each burger_data}}
          {{#if this.devoured}}
            <div id="gob" class="input-group">
              <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
			  <div id="exdiv"></div>

            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>
